@import './input-text.styl'

.delivery
    font-size: 12px
    &__steps
        display: flex
        justify-content: center
    &__form
        background-color: #FFFFFF
        margin-top: -30px
        padding: 15px
        box-shadow: 0px 5px 10px #FFF1E0
    &__back-to-cart
        padding-left: 15px
        padding-right: 15px
        margin-top: 25px
    &__form-content
        margin-top: 20px
    &__form-input
        display: flex
    &__form-section
        flex-basis: 70%
        padding: 0px 15px
    &__heading
        display: flex
        flex-wrap: wrap
        justify-content: space-between
    &__dropship-section
        display: flex
        align-items: flex-end
    &__dropshipper-checkbox
        vertical-align: middle
    &__inputs
        margin-top: 40px
        display: flex
        flex-wrap: wrap
        justify-content: space-between
    &__input-containing
        transition: all 0.2s
        width: 48%;
        margin-bottom: 10px
        &--disabled
            pointer-events: none
    &__summary-section
        flex-basis: 30%
        border-left: 1px solid rgba(255, 138, 0, 0.2)
        padding: 10px 15px

@media only screen and (max-width: 768px)
/* mobile landscape */
    .delivery
        &__form-section
            flex-basis: 60%
        &__inputs
            display: block
        &__summary-section
            flex-basis: 40%
        &__heading
            display: block
        &__dropship-section
            justify-content: flex-start
        &__input-containing
            width: 100%
        &__head-title
            width: 90%

@media only screen and (max-width: 576px)
/* mobile portrait or less than 576px */    
    .delivery
        &__form-input
            display: block
        &__summary-section
            margin-top: 20px
            border: none
@media only screen and (max-width: 380px)
/* mobile portrait (small phone) */
    .delivery
        &__form
            margin-top: -25px

