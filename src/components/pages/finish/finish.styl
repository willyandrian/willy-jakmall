.finish
    font-size: 12px
    &__steps
        display: flex
        justify-content: center
    &__form
        background-color: #FFFFFF
        margin-top: -30px
        padding: 15px
        box-shadow: 0px 5px 10px #FFF1E0
    &__form-content
        margin-top: 20px
        display: flex
    &__form-section
        flex-basis: 70%
        padding: 0px 15px
        display: flex
        justify-content: center
        align-items: center
    &__order
        margin-top: 30px
        font-size: 14px
    &__order-message
        color: #646464
        margin-top: 5px
    &__back-to-homepage
        margin-top: 50px
        color: #aaaaaa
        cursor: pointer
        &:hover
            font-weight: bold
    &__summary-section
        flex-basis: 30%
        border-left: 1px solid rgba(255, 138, 0, 0.2)
        padding: 10px 15px

@media only screen and (max-width: 768px)
/* mobile landscape */
    .finish
        &__form-section
            flex-basis: 60%
        &__summary-section
            flex-basis: 40%

@media only screen and (max-width: 576px)
/* mobile portrait or less than 576px */    
    .finish
        &__form-content
            display: block
            margin-top: 30px
        &__summary-section
            margin-top: 20px
            border: none
@media only screen and (max-width: 380px)
/* mobile portrait (small phone) */
    .finish
        &__form
            margin-top: -25px